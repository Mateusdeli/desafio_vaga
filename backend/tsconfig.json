{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "allowJs": true,
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}